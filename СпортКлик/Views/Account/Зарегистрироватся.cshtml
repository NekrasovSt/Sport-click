@model СпортКлик.Models.RegisterModel

@using (Html.BeginForm())
{
    <fieldset>
        <legend class="">Регистрация</legend>
                @Html.ValidationSummary(true)
        <div class="control-group">
            <!-- Username -->
            <label class="control-label" for="username">Имя пользователя</label>
            <div class="controls">
                @Html.TextBoxFor(i => i.UserName, new { @class = "input-xlarge" })
                @Html.ValidationMessageFor(i => i.UserName, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Пароль</label>
            <div class="controls">
                @Html.PasswordFor(i => i.Password, new { @class = "input-xlarge" })
                @Html.ValidationMessageFor(i => i.Password, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Подтверждение пароля</label>
            <div class="controls">
                @Html.PasswordFor(i => i.ConfirmPassword, new { @class = "input-xlarge" })
                @Html.ValidationMessageFor(i => i.ConfirmPassword, null, new { @class = "help-inline" })
            </div>
        </div>
         <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">E-mail</label>
            <div class="controls">
                @Html.TextBoxFor(i => i.Email, new { @class = "input-xlarge" })
                @Html.ValidationMessageFor(i => i.Email, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-success" type="submit">Зарегистрироватся</button>
            </div>
        </div>
    </fieldset>
}