@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
    <link href="@Styles.Url("~/content/colorbox")" rel="stylesheet"/>
    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>
    <link href="@Styles.Url("~/Content/css-responsive")" rel="stylesheet" type="text/css" />
    @RenderSection("head", required: false)
</head>
<body>
    <div class="container">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#"></a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            @Html.Navigation(User)
                        </ul>                     
                        @Html.Partial(ЧастичныеПредставления.ПоискТовара) 
                        @Html.Partial(ЧастичныеПредставления.AjaxLogin)                       
                        @Html.Partial(ЧастичныеПредставления.Вход)
                        @{Html.RenderAction(Действия.Все, Контролеры.Корзина); }
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                @Html.Partial(ЧастичныеПредставления.СайдБар)
                <div class="span9">
                    <div class="row-fluid">
                        @Html.Partial(ЧастичныеПредставления.ХлебныеКрошки)
                        @Html.Partial("_alerts")
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <footer>
            <p>&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
        </footer>
    </div>
    <!-- Для модальных окон -->
    <div>
        <div id="PopupWrapper"></div>
    </div>
    @Scripts.Render("~/js")
    @Scripts.Render("~/ckeditor")
    @Scripts.Render("~/Common")
    @Scripts.Render("~/colorbox")
    @RenderSection("Scripts", required: false)
</body>
</html>

