@model Данные.Модели.Товар
<div class="page-header">
    <h5>@Model.Имя</h5>
</div>
<div class="row-fluid">
    <div class="span4">
        @{
            string orig;
            if (string.IsNullOrEmpty(Model.ИмяФайлаИзображения))
            {
                orig = "НетИзображения_original.png";
            }
            else
            {
                orig = "original_" + Model.ИмяФайлаИзображения;
            }
        }
        <img src="@Url.Content("~/" + Константы.ПапкаДляХраненияИзображений)/@orig" alt="@Model.Имя" class="img-polaroid">
    </div>
    <div class="span8">
        <span class="label label-info">Стоимость товара @Model.Цена руб.</span>
        @if (Model.Скидка != null && Model.Скидка != 0)
        {
            <span class="label label-important">Скидка @Model.Скидка %</span>
        }
        <a href="@Url.Action(Действия.Добавить, new { controller = Контролеры.Корзина, Ид = Model.Ид })"><span class="label label-info"><i class="icon-shopping-cart icon-black"></i>В корзину</span></a>
        <div class="row-fluid">
            <div class="page-header">
                <h5>Описание</h5>
            </div>
            @if (!string.IsNullOrEmpty(Model.Описание))
            {

                Model.Описание.ВывестиКакРазметку();
            }
            else
            {
                <em>Описание отсутствует</em>
            }
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="offset10">
        @Html.ActionLink("Назад к товарам", Действия.Все, Контролеры.Товар, new { @class = "btn btn-info btn-mini" })
    </div>
</div>
